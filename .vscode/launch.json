{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "vuejs: firefox launch",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}/src",
            "pathMappings": [
                {
                    "url": "webpack:///src/",
                    "path": "${webRoot}/"
                }
            ],
            "breakOnLoad": true,
        },
        {
            "type": "firefox",
            "request": "attach",
            "name": "vuejs: firefox attach",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}/src",
            "pathMappings": [
                {
                    "url": "webpack:///src/",
                    "path": "${webRoot}/"
                }
            ],
            "breakOnLoad": true,
            "port": 6000
        }
    ]
}